                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#"><span class="fa fa-user"></span> Persona</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="active"><a asp-controller="Inicio" asp-action="Index">Inicio <span class="sr-only">(current)</span></a></li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Registro <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a asp-controller="Persona" asp-action="Crear">Agregar</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a asp-controller="Persona" asp-action="Editar">Editar</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a asp-controller="Persona" asp-action="Eliminar">Eliminar</a></li>

                        </ul>
                    </li>
                    <li><a href="#" data-toggle="modal" data-target="#Asistencia">Asistencia Tecnica</a></li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>


</header>

<body class="body_registro">

    <section class="color_label_registro">

        <div class="container">

            <h3 class="titulos">@ViewBag.Title</h3>
            <hr>
        </div>

        <div id="wrapper" class="container">

            <form method="post">
                @*  <form method="post" action="/Persona/Crear/">*@

                <fieldset>

                    <div class="form-group">
                        <div class="col-md-6">
                            <label class="control-label" asp-for="Nombre">Nombre</label>
                            <input asp-for="Nombre" class="form-control" placeholder="Jon" type="text">
                            <span asp-validation-for="Nombre"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-6">
                            <label class="control-label" asp-for="Apellido">Apellido</label>
                            <input asp-for="Apellido" class="form-control" placeholder="Doe" type="text">
                            <span asp-validation-for="Apellido"></span>
                        </div>
                    </div>

                    @*<div class="form-group">
                            <div class="col-md-6">
                                <label class="control-label" asp-for="Telefono">Telefono</label>
                                <div class="input-group">
                                    <span class="input-group-addon">+506</span>
                                    <input asp-for="Telefono" class="form-control" placeholder="12345678" type="number">
                                </div>
                                <span asp-validation-for="Telefono"></span>
                            </div>
                        </div>*@

                    <div class="form-group">
                        <div class="col-md-6">
                            <label class="control-label" asp-for="Cedula">Cedula</label>
                            <div class="input-group">
                                <span class="input-group-addon">ID</span>
                                <input asp-for="Cedula" class="form-control" placeholder="000000000" type="number">

                            </div>
                            <span asp-validation-for="Cedula"></span>
                        </div>
                    </div>




                    <div class="form-group">
                        <div class="col-md-6">
                            <label class="control-label" asp-for="Carne">Carne</label>
                            <input asp-for="Carne" class="form-control" disabled>
                            <span asp-validation-for="Carne"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-6">
                            <label class="control-label" asp-for="Fecha_Nacimiento">Fecha nacimiento</label>
                            <input type="date" asp-for="Fecha_Nacimiento" class="form-control">
                            <span asp-validation-for="Fecha_Nacimiento"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-6">
                            <label class="control-label" asp-for="Email">Correo</label>
                            <input asp-for="Email" class="form-control" placeholder="ejemplo@org.com" type="email">
                            <span asp-validation-for="Email"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-6">
                            <label class="control-label" asp-for="Sexo">Sexo</label>
                            <select asp-for="Sexo" class="form-control">
                                <option value="1">Masculino</option>
                                <option value="2">Femenino</option>
                                <option value="3">Indefinido</option>

                            </select>
                            <span asp-validation-for="Sexo"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-6">

                            <label asp-for="Tipo" class="control-label"></label>
                            <select asp-for="Tipo" class="form-control">
                                @*<select asp-for="Tipo" class="form-control" asp-items="@Model.Tipo">*@

                                @*Html.DisplayFor(m => m.Tipo);*@

                                @foreach (var item in Model.Tipo)
                                    {

                                        @*Html.DisplayFor(m=>m.Tipo);*@

                                        <option value="@item.Id"> @item.Nombre </option>

                                    }

                            </select>
                            @*<select asp-for="Tipo" class="form-control" asp-items="ViewBag.Tipo" hidden></select>*@
                            <span asp-validation-for="Tipo"></span>

                        </div>
                    </div>

                </fieldset>

                <button type="submit" class="btn btn-dark btn-lg btn_registrar">Registrar <span class="fa fa-save" aria-hidden="true"></span></button>
            </form>
        </div>
    </section>
</body>



